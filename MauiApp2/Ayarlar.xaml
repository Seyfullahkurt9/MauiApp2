<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Ayarlar"
             Title="Ayarlar"
             BackgroundColor="#2C3E50">
    <ContentPage.Resources>
        <Style TargetType="Label" x:Key="DefaultLabelStyle">
            <Setter Property="BackgroundColor" Value="#34495E"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style x:Key="DarkLabelStyle" TargetType="Label">
            <Setter Property="BackgroundColor" Value="#1C2833"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout 
            Orientation="Horizontal" 
            Spacing="10" 
            Padding="30,20" 
            VerticalOptions="Start"
            BackgroundColor="#2C3E50">
            <Switch 
                x:Name="switchControl" 
                Toggled="Switch_Toggled"
                OnColor="#3498DB"
                ThumbColor="White"/>
            <Label 
                x:Name="switchControlLabel" 
                FontSize="16" 
                VerticalOptions="Center"
                TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>